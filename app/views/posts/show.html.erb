<h2><%= @post.title %> - <%= @post.address %></h2>
<h4><%= @post.content %></h4>

<h3>Comments</h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li><strong><%= comment.user.user_name %></strong> says <%= comment.content %></li>
    <%=  link_to 'upvote', upvote_comment_path(comment), method: :put%>
    <%=  link_to 'downvote', downvote_comment_path(comment), method: :put%>
  <%= comment.get_upvotes.size %>
  <% end %>
</ul>

<%= link_to "Add Comment", new_post_comment_path(@post) %>
