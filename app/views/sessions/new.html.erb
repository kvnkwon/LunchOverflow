<div class="small-6 small-centered large-4 large-centered columns">
  <div class="form-container text-center">
    <%=  form_for(:session, url: sessions_path) do |f|  %>
      <%= f.label :username, class: "form-input-label" %><br>
      <%= f.text_field :user_name, class: "form-input-area" %><br>
      <%= f.label :password, class: "form-input-label" %><br>
      <%= f.password_field :password, class: "form-input-area" %><br>
      <%= f.submit 'Login', class: "button radius expand form-button"  %>
    <% end %>
  </div>
</div>
