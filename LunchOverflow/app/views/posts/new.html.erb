<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title, :placeholder => @post.title %><br>
  <%= f.label :content %><br>
  <%= f.text_field :content, :placeholder => @post.content %><br>
  <%= f.label :address %><br>
  <%= f.text_field :address, :placeholder => @post.address %><br>
  <%= f.submit 'Post' %>
<% end %>